
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="./images/logo.png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <link href="~/Content/style.css" rel="stylesheet" />
    <title>HALPERT</title>
</head>
<body>

    <header>

        <a class="logo" href="#"> <img src="./images/logo.png" alt="" width="40" height="40" class="">HALPERT</a>

        <nav class="navigation">

            @if (User.Identity.IsAuthenticated)
            {
                if (User.IsInRole("Manager"))
                {
                    @Html.ActionLink("Dashboard", "Index", "Manager")
                }
                else
                {
                    @Html.ActionLink("Dashboard", "Index", "Developer")
                }
                <a href="Accounts/Logout">Log off</a>
            }
            else
            {
                <a href="Accounts/Register">Register</a>
                <a href="Accounts/Login">Login</a>
            }

        </nav>
    </header>


    <section class="main">
        <div>
            <br /><br />
            <h2>Welcome to, <br><span>HALPERT</span></h2>
            <h3>
                Bring your team together to plan, track, and <br> collaborate on any project — all in one place.
            </h3>
            <br><br><br><br>
            <a href="Accounts/Login" class="main-btn">Start now!</a>
        </div>
    </section>



    <section class="projects" id="projects">
        <h2 class="title">Services</h2>
        <div class="content">
            <div class="project-card">
                <div class="project-image">
                    <img src="images/work1.jpg" />
                </div>
                <div class="project-info">
                    <strong class="project-title">
                    </strong>
                </div>
            </div>
            <div class="project-card">
                <div class="project-image">
                    <img src="images/Screenshot 2022-01-21 193858.png" />
                </div>
                <div class="project-info">
                    <p class="project-category">Creating PERT chart Automaticly </p>
                    <strong class="project-title">

                        <a href="https://en.wikipedia.org/wiki/Program_evaluation_and_review_technique" class="more-details">More details</a>
                    </strong>
                </div>
            </div>

            <div class="project-card">
                <div class="project-image">
                    <img src="images/sec.png" />
                </div>
                <div class="project-info">
                    <p class="project-category">Creating Gantt chart Automaticly </p>
                    <strong class="project-title">

                        <a href="https://en.wikipedia.org/wiki/Gantt_chart" class="more-details">More details</a>
                    </strong>
                </div>
            </div>
            <div class="project-card">
                <div class="project-image">
                    <img src="images/work1.jpg" />
                </div>
                <div class="project-info">
                    <strong class="project-title">
                    </strong>
                </div>
            </div>
        </div>
    </section>

    <section class="cards contact" id="contact">
        <h2 class="title">Let's work together</h2>
        <div class="content">
            <div class="card">
                <div class="icon">
                    <i class="fas fa-phone"></i>
                </div>
                <div class="info">
                    <h3>Phone</h3>
                    <!-- <p>+962 65482296</p> -->
                </div>
            </div>
            <div class="card">
                <div class="icon">
                    <i class="fas fa-envelope"></i>
                </div>
                <div class="info">
                    <h3>Email</h3>
                    <!-- <p>HALPERT@PMP.com</p> -->
                </div>
            </div>
        </div>
    </section>

    <footer class="footer">
        <p class="footer-title">Copyrights - <span>HALPERT</span></p>
        <div class="social-icons">
            <a href="#"><i class="fab fa-linkedin"></i></a>
            <a href="#"><i class="fab fa-twitter"></i></a>
            <a href="#"><i class="fab fa-instagram"></i></a>
            <a href="#"><i class="fab fa-youtube"></i></a>
        </div>
    </footer>

</body>
</html>