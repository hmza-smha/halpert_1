@model List<halpert.Models.WorksOn>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2>Projects I work in</h2>
<br />
<br />

<table class="table">
    
    @if (Model.Count == 0)
    {
        <i>you are not working in any project!</i>
    }
    else
    {
        <tr>
            <th>Project name</th>
            <th></th>
        </tr>
        foreach (var item in Model)
        {
            <tr>
                <th>
                    <span class="lead text-info">@item.Project.Name</span>

                </th>
                <td>
                    @Html.ActionLink("Tasks", "ProjectTasks", new { id = item.Project.Id }) |
                </td>
            </tr>
        }
    }

</table>
